{
  "name": "microshard/core",
  "description": "minimalistic core for micro services",
  "type": "library",
  "authors": [{
    "name": "Rene Winklewski",
    "email": "rene.winklewski@gmail.com"
  }],
  "keywords": [
    "Json",
    "Rpc",
    "Api",
    "Microservice"
  ],
  "license": "MIT",
  "minimum-stability": "dev",
  "autoload": {
    "psr-4": {
      "MicroShard\\Core\\" : "src/",
      "MicroShard\\Core\\Test\\" : "tests/"
    }
  },
  "require": {
    "php": "^7.0",
    "microshard/jsonrpcserver": "dev-master",
    "guzzlehttp/guzzle": "^6"
  },
  "require-dev": {
    "phpunit/phpunit": "^6.5 || ^7.0",
    "php-mock/php-mock": "^2.0"
  }
}
